{
  "name": "reason-standard-native",
  "description": "A standard library replacement for Reason and OCaml.",
  "version": "0.0.1",
  "repository": "https://github.com/Dean177/reason-standard",
  "author": "Dean Merchant <deanmerchant@gmail.com>",
  "license": "MIT",
  "private": false,
  "keywords": [
    "BuckleScript",
    "ReasonML"
  ],
  "scripts": {
    "doc": "esy dune build @doc",
    "doc-path": "esy echo #{self.target_dir}/default/_doc/_html/index.html",
    "format": "esy dune build @fmt",
    "start": "esy dune build -p #{self.name} --watch",
    "test": "esy dune runtest"
  },
  "dependencies": {
    "@esy-ocaml/reason": ">= 3.4.0 < 3.6.0",
    "@opam/alcotest": "0.8.5",
    "@opam/base": "v0.13.0",
    "@opam/dune": "2.1.3",
    "@opam/zarith": "1.9.1",
    "ocaml": "~4.8.1000",
    "refmterr": "*"
  },
  "devDependencies": {
    "@opam/merlin": "*",
    "ocaml": "~4.8.1000",
    "@opam/odoc": "*"
  },
  "esy": {
    "build": "refmterr dune build -p #{self.name}",
    "buildEnv": {
      "ODOC_SYNTAX": "re"
    }
  }
}
